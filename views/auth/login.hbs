{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
{{/if}}

<div class="login-form">
  <div class="card">
    <h5 class="card-header">Login</h5>
    <div class="card-body">
      <form action="/user/login" method="POST">
        <label class="form-label" for="username">Username:</label>
        <input class="form-control" type="text" name="username" placeholder="Please enter your username (mandatory)" value="user"/>
        <label class="form-label" for="password">Password:</label>
        <input class="form-control" type="text" name="password" placeholder="Please enter your username (mandatory)" value="123456789Aa!"/>
        <button class="btn btn-outline-success" name="submit">Login</button>
      </form>
    </div>
  </div>
</div>
{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
{{/if}}

<div class="signup-form">
  <div class="card">
    <h5 class="card-header">Sign-up</h5>
    <div class="card-body">
      <form action="/user/signup" method="POST">
        <label class="form-label" for="username">Username:</label>
        <input class="form-control" type="text" name="username" placeholder="Please enter your username (mandatory)"/>
        <label class="form-label" for="email">E-mail:</label>
        <input class="form-control" type="text" name="email" placeholder="Please enter your e-mail address (mandatory)"/>
        <label class="form-label" for="password">Password:</label>
        <input class="form-control" type="text" name="password" placeholder="Please enter your password"/>
        <div class="alert alert-warning" role="alert">The password MUST have between 8 and 15 characters and contain at least one: number, special character, lowercase and uppercase letters</div>
        <button class="btn btn-outline-success" name="submit">Register</button>
      </form>
    </div>
  </div>
</div>
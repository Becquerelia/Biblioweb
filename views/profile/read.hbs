{{#if errorMessage}}
   <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
{{/if}}

<h2>Read</h2>
<table class="table table-hover">
  <thead>
    <tr style="background-color: lightblue">
      <th scope="col">Book title</th>
      <th scope="col" width="100px"></th>
      <th scope="col" width="100px"></th>
      <th scope="col" width="100px"></th>
    </tr>
  </thead>
  <tbody>
      {{#each findBooks}}
    <tr>
      <td>{{this.title}}</td>
      <td><form method="POST" action="/profile/{{this._id}}/editToPending"><button class="btn btn-outline-info" style="width:90px">Pending</button></form></td>
      <td><form method="POST" action="/profile/{{this._id}}/editToReading"><button class="btn btn-outline-info" style="width:90px">Reading</button></form></td>
      <td>
      <!-- Button trigger modal -->
      <button 
      type="button"
      class="btn btn-outline-danger btn-delete-book" 
      data-bs-toggle="modal"
      data-bs-target="#exampleModal"
      style="width:90px"
      >Delete</button>
      <!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete this book</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure? This action cannot be undone
      </div>
      <form method="POST" action="/profile/{{this._id}}/deleteBook">
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >No!</button>

          <button type="submit" class="btn btn-primary">Yes, I'm sure</button>
        </div>
      </form>
    </div>
  </div>
</div>    
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>





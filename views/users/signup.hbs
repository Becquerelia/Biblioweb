<div class="signup-form">
  <div class="card">
    <h5 class="card-header">Sign-up</h5>
    <div class="card-body">
      <form action="/user/signup" method="POST">
        <label class="form-label" for="username">Username: user</label>
        <input class="form-control" type="text" name="username" />
        <label class="form-label" for="email">E-mail: mail@mail.com</label>
        <input class="form-control" type="text" name="email" />
        <label class="form-label" for="password">Password: 123456789Aa!</label>
        <input class="form-control" type="text" name="password" />
        <button class="btn btn-outline-success" name="submit">Register</button>
      </form>
    </div>
  </div>
</div>